      <section class="bg-light">
        <h1>Dados Pessoais</h1>
        <p></p>

        <center>
          <button id="editarbtn" type="button" onclick="editarDados()">Editar</button>
        </center>
        <div class="container">


          <div class="panel-body" id="editardados" style="display:none">

            <form align="center" style="width: 50%; margin: 0 auto;" action="/users/update_user" method="post">
              <div class="form-group">
                <label for="Nome">Nome:</label>
                <input type="text" class="form-control" id="Nome" placeholder="Insira o seu Nome" name="Nome" value="<%= user.Nome %>">
              </div>
              <div class="form-group">
                <label for="password">Password:</label>
                <input type="pwd" class="form-control" id="password" placeholder="Enter password" name="password" value="<%= user.password %>">
              </div>
              <div class="form-group">
                <label for="Email">Email:</label>
                <input type="email" class="form-control" id="type" placeholder="Email" name="Email" value="<%= user.Email %>" disabled>
              </div>
              <div class="form-group">
                <label for="NIF">NIF:</label>
                <input type="text" placeholder="NIF" class="form-control" id="NIF" name="NIF" value="<%= user.NIF %>">
              </div>
              <div class="form-group">
                <label for="Contacto">Contacto:</label>
                <input type="tel" placeholder="Número de telemóvel" class="form-control" id="Contacto" name="Contacto" value="<%= user.Contacto %>">
              </div>
              <div class="form-group">
                <label for="Morada">Morada:</label>
                <input type="text" placeholder="Morada" class="form-control" id="Morada" name="Morada" value="<%= user.Morada %>">
              </div>
              <div class="form-group">
                <label for="Tema">Tema:</label>
                <select id="UI">
                  <option value="Original" selected="selected">Original</option>
                  <option value="Preto">Preto</option>
                </select>
              </div>



              <button type="submit" class="btn btn-success">Atualizar</button>

            </form>

          </div>
        </div>
        </div>

